#include <cs50.h>
#include <stdio.h>

int get_height(string s)
{
    int n;
    do
    {
        n = get_int("%s", s);
    }
    while (n < 1 || n > 8);
    return n;
}

int main(void)
{
    int height = get_height("Height: ");
    for (int i = 0; i < height; i++)
    {
        for (int j = 0; j < height - i - 1; j++)
        {
            printf(" ");
        }
        for (int j = 0; j < i + 1; j++)
        {
            printf("#");
        }
        printf(" ");
        printf(" ");
        for (int j = 0; j < i + 1; j++)
        {
            printf("#");
        }
        printf("\n");
    }
}
